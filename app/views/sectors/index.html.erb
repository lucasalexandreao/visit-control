<% content_for :title, "Setores" %>

<div class="d-flex my-3 justify-content-between align-items-center">
  <h1 class="mb-0">Setores</h1>
  <%= link_to "Adicionar setor", new_sector_path, class: "btn btn-dark fw-semibold d-flex" %>
</div>

<div class="border border-light-subtle p-3 rounded-4">
  <table class="table table-striped table-hover mb-0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Unidade</th>
        <th class="text-end" style="transform: translateX(-1rem);">Ação</th>
      </tr>
    </thead>

    <tbody align-middle ">
      <% @sectors.each do |sector| %>
        <tr>
          <td style="width: 100px"><%= sector.id %></td>
          <td><%= sector.name %></td>
          <td><%= sector.unit.name %></td>
          <td class="text-end" style="width: 120px; padding-right: 1.5rem;">
            <%= link_to edit_sector_path(sector), class: "btn btn-sm btn-dark border", role: "button" do %>
              <i class="fa fa-edit"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
