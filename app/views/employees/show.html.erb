<div class="container d-flex justify-content-center mt-5">
  <div class="card pt-1 px-1 pb-2 border border-opacity-25 rounded-5 shadow-sm" style="max-width: 500px; width: 100%; position: relative;">
    <div class="card-body">

      <%= render @employee %>

      <div class="mt-4 text-center d-flex justify-content-around">
        <%= link_to "Editar", edit_employee_path(@employee), class: "w-25 border border-dark border-opacity-10 btn btn-light me-2 fs-5" %>
        <%= link_to "Voltar", employees_path, class: "w-25 border border-light border-opacity-10 btn btn-dark fs-5" %>
      </div>
    </div>
  </div>
</div>
