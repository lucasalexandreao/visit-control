<div class="container d-flex justify-content-center mt-1">
  <div class="card p-4 rounded-5 border-opacity-10 border" style="max-width: 600px; width: 100%;">
    <div class="card-body">
      <div class="d-flex justify-content-center mb-3">
        <h5 class="border border-b-1 border-opacity-10 rounded-5 p-3 w-75 card-title text-center">Detalhes do Funcionário</h5>
      </div>

      <div id="<%= dom_id employee %>">
        <div class="fw-semibold fs-2 text-capitalize mb-4 d-flex flex-column">
          <p class="text-center"><%= employee.name %></p>
          <i class="text-center fa <%= employee.active? ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' %>"></i>
        </div>

        <hr></hr>

        <div class="d-flex flex-row fw-semibold fs-5 text-capitalize">
          <p>CPF: </p>
          <p class="fw-light flex-fill text-end"><%= employee.cpf %></p>
        </div>

        <div class="d-flex flex-row fw-semibold fs-5">
          <p>Email: </p>
          <p class="fw-light flex-fill text-end"><%= employee.user&.email || "Usuário não cadastrado" %></p>
        </div>

        <hr></hr>

        <div class="d-flex flex-row fw-semibold fs-5 text-capitalize">
          <p>Unidade:</p> 
          <p class="fw-light flex-fill text-end"><%= employee.sector.unit.name %></p>
        </div>

        <div class="d-flex flex-row fw-semibold fs-5 text-capitalize">
          <p>Setor: </p>
          <p class="fw-light flex-fill text-end"><%= employee.sector.name %></p>
        </div>

      </div>
    </div>
  </div>
</div>
