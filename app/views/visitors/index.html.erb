<% content_for :title, "Visitantes" %>

<h1>Visitantes</h1>

<div class="d-flex flex-row justify-content-between my-3">
  <div class="ml-3">
    <%= render "search" %>
  </div>
  <%= link_to "Adicionar visitante", new_visitor_path, class: "btn btn-dark fw-semibold" %>
</div>

<div class="border border-light-subtle p-3 rounded-4">
  <table class="table table-striped table-hover mb-0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Foto</th>
        <th>Nome</th>
        <th>CPF</th>
        <th>RG</th>
        <th>Telefone</th>
        <th>Ativo</th>
        <th class="text-end" style="transform: translateX(-1rem)">Ação</th>
      </tr>
    </thead>

    <tbody class="align-middle">
      <% Array(@visitor || @visitors).each do |visitor| %>
        <tr>
          <td style="width: 100px;"><%= visitor.id %></td>
          <td><%= image_tag visitor.photo.url || "", class: "border border-light-subtle", style: "width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" %></td>
          <td><%= visitor.name %></td>
          <td><%= visitor.cpf %></td>
          <td><%= visitor.rg %></td>
          <td><%= visitor.phone %></td>
          <td>
            <i class="fa <%= visitor.active? ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' %>" style="transform: translateX(0.6rem)"></i>
          </td>
          <td class="text-end" style="width: 120px;">
            <% if can?(:read, visitor) %>
              <%= link_to visitor, class: "btn btn-sm btn-light border", role: "button" do %>
                <i class="fa fa-eye"></i>
              <% end %>
            <% end %>
            <% if can?(:edit, visitor) %>
              <%= link_to edit_visitor_path(visitor), class: "btn btn-sm btn-dark border", role: "button" do %>
                <i class="fa fa-edit"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>
