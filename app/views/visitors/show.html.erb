<div class="container d-flex justify-content-center mt-5">
  <div class="card p-4" style="max-width: 600px; width: 100%; position: relative;">
    <div class="card-body">
      <%= render @visitor %> 

      <div class="mt-4 text-center">
        <% if can?(:edit, @visitor) %>
          <%= link_to "Editar este visitante", edit_visitor_path(@visitor), class: "btn btn-primary me-2" %>
        <% end %>
        <%= link_to "Voltar para visitantes", visitors_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
