<%= form_with(model: visitor) do |form| %>
  <% if visitor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(visitor.errors.count, "error") %> prohibited this visitor from being saved:</h2>

      <ul>
        <% visitor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :rg, style: "display: block" %>
    <%= form.text_field :rg %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, id: "foto-input" %> <!-- Campo de upload de arquivo -->
  </div>

  <!-- Captura de foto via webcam -->
  <div class="field" data-controller="camera">
    <button type="button" id="ativar-camera">Ativar Câmera</button>
    <video id="webcam" autoplay style="display:none;"></video>
    <button type="button" id="capturar-foto" style="display:none;">Capturar Foto</button>
    <button type="button" id="desligar-camera" style="display:none;">Desligar Câmera</button>
    <canvas id="canvas" style="display:none;"></canvas>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

