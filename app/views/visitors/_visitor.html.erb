<div id="<%= dom_id visitor %>">
<div class="container d-flex justify-content-center mt-5">
  <div class="card p-4" style="max-width: 600px; width: 100%; position: relative;">
    <div class="card-body">
      <% if visitor.photo.present? %>
        <div class="text-center" style="margin-bottom: 20px;">
          <%= image_tag visitor.photo.url, alt: "Foto do Visitante", class: "visitor-photo", style: "width: 150px; height: 150px; object-fit: cover; border-radius: 50%;" %>
        </div>
      <% else %>
        <p class="text-center">Nenhuma foto cadastrada.</p>
      <% end %>
      
      <p><strong>Nome:</strong> <%= visitor.name %></p>
      <p><strong>CPF:</strong> <%= visitor.cpf %></p>
      <p><strong>RG:</strong> <%= visitor.rg %></p>
      <p><strong>Telefone:</strong> <%= visitor.phone %></p>
      <p><strong>Ativo:</strong> <i class="fa <%= visitor.active? ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' %>" style="transform: translateX(0.6rem)"></i></p>
    </div>
  </div>
</div>


</div>
