<div id="<%= dom_id visitor %>">
<div class="container d-flex justify-content-center">
  <div class="card p-4 rounded-5 border-opacity-10 border" style="max-width: 600px; width: 100%; position: relative;">
    <div class="card-body">
      <% if visitor.photo.present? %>
        <div class="text-center" style="margin-bottom: 20px;">
          <%= image_tag visitor.photo.url, alt: "Foto do Visitante", class: "visitor-photo border border-light-subtle rounded-circle border-2", style: "width: 200px; height: 200px; object-fit: cover;" %>
        </div>
      <% else %>
        <p class="text-center">Nenhuma foto cadastrada.</p>
      <% end %>
      
      <div class="fw-semibold fs-2 text-capitalize mb-4 d-flex flex-column">
        <p class="text-center"><%= visitor.name %></p>
        <i class="text-center fa <%= visitor.active? ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' %>"></i>
      </div>

      <hr></hr>

      <div class="d-flex flex-row fw-semibold fs-5 text-capitalize">
        <p>CPF: </p>
        <p class="fw-light flex-fill text-end"><%= visitor.cpf %></p>
      </div>

      <div class="d-flex flex-row fw-semibold fs-5 text-capitalize">
        <p>RG:</p> 
        <p class="fw-light flex-fill text-end"><%= visitor.rg %></p>
      </div>
      
      <div class="d-flex flex-row fw-semibold fs-5 text-capitalize">
        <p>Telefone: </p>
        <p class="fw-light flex-fill text-end"><%= visitor.phone %></p>
      </div>
    </div>
  </div>
</div>


</div>
