<div class="container d-flex justify-content-center mt-5">
  <div class="col-md-8 col-lg-6 col-xl-5 p-4 border rounded shadow">
    <%= form_with(model: unit) do |form| %>
      <% if unit.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(unit.errors.count, "erro") %> impediram esta unidade de ser salva:</h4>
          <ul>
            <% unit.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, "Nome", class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :active, "Ativo", class: "form-label" %>
        <%= form.check_box :active, class: "form-check-input" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Salvar", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
